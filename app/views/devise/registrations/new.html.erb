<div class="container wrapper">
    <div class="inner_content">
      <div class="row">
        <div class="span6 pad20">
          <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
          <div class="form-horizontal">
            <legend>Sign up</legend>
            <%= devise_error_messages! %>
            <div class="control-group">
              <label class="control-label"><%= f.label :email %></label>
              <div class="controls">
                <%= f.email_field :email, :autofocus => true, :placeholder => 'Email', :type => 'email', :required => true %>
              </div>
            </div>

            <div class="control-group">
              <label class="control-label"><%= f.label :name%></label>
              <div class="controls">
                <%= f.text_field :name, :placeholder => 'Name', :type => 'text' %>
              </div>
            </div>

            
            <div class="control-group">
              <label class="control-label"><%= f.label :device_type %></label>
                <div class="controls">
                <%= f.text_field :device_type, :placeholder => 'Device type', :type => 'text' %>
              </div>
            </div>

            <div class="control-group">
              <label class="control-label"><%= f.label :password %></label>
                <div class="controls">
                <%= f.password_field :password, :placeholder => 'Password', :type => 'password', :required => true %>
              </div>
            </div>

            <div class="control-group">
              <label class="control-label"><%= f.label :password_confirmation %></label>
                <div class="controls">
                <%= f.password_field :password_confirmation, :placeholder => 'Confirm your password', :type => 'password', :required => true %>
              </div>
            </div>

            <div class="control-group">
              <div class="controls">
                <div class="btn-group">
                  <%= f.submit "Sign up", :class => 'btn btn-primary btn-rounded' %>
                  <button class="btn btn-warning btn-rounded"><%= render "devise/shared/links" %></button>
                </div>
              </div>
            </div>

            
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
 




