<div class="container wrapper">
    <div class="inner_content">
      <div class="row">
        <div class="span6 pad20">
        	<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
        	<div class="form-horizontal">
	            <legend>Forgot your password?</legend>
	            <%= devise_error_messages! %>
	            <div class="control-group">
	              <label class="control-label"><%= f.label :email %></label>
	              <div class="controls">
	                <%= f.email_field :email, :autofocus => true, :placeholder => 'Email', :type => 'email', :required => true %>
	              </div>
	            </div>

	            <div class="control-group">
	              <div class="controls">
	                  <%= f.submit "Send me reset instructions", :class => 'btn btn-warning btn-rounded' %>
	              </div>
	            </div>
	            	<div class="controls">
	                  <%= render "devise/shared/links" %>
	              </div>
	        </div>
	    	<% end %>
      </div>
    </div>
  </div>
</div>


