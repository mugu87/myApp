<%= form_for(@challenge, url: new_user_challenge_path(@user)) do |f| %>
	<% if @challenge.errors.any? %>
		<div id="error_explanation">
			<h2><%= pluralize(@challenge.errors.count, "error") %> prohibited this challenge from being created:</h2>

			<ul>
				<% @challenge.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
	<% end %>

	<div>I will donate 
		<div class="field">
			<%= f.number_field :cost_per_completion %> dollars
		</div>
		for <div class="field">
			<%= f.number_field :calories_to_burn %> calories to burn
		</div>
		or <div class="field">
			<%= f.number_field :kilo_to_walk %> kilos to walk
		</div> 
		or <div class="field">
			<%= f.number_field :kilo_to_run %> kilos to run
		</div> 
		until <div class="field">
			<%= f.date_select :expiration %>
		</div>
		for this cause <div class="field">
			<%= select_tag(:cause, options_from_collection_for_select(Cause.all, "id","name")) %>
		</div>

	</div>

	<div class="actions">
		<%= f.submit %>
	</div>
<% end %>
