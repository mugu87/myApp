<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>donation id</th>
      <th>npo id</th>
      <th>npo name</th>
      <th>amount donated</th>
      <th>calories donated</th>
      <th>date donated</th>
    </tr>
  </thead>

  <tbody>
    <% @myDonations.each do |donation| %>
      <tr>
        <td><%= donation.id %></td>
        <td><%= donation.npo_id %></td>
        <td><%= (Npo.find(donation.npo_id)).name%></td>
        <td><%= donation.amount_donated %></td>
        <td><%= donation.calories_donated %></td>
        <td><%= donation.created_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<p>
</p>


<p>
--------------------------my user data from FitBit----------------------------
</p>

<table>
  <thead>
    <tr>
      <th>Display Name</th>
      <th>Full Name</th>
      <th>Nick Name</th>
      <th>Gender</th>
      <th>Height</th>
      <th>Weight</th>
    </tr>
  </thead>

  <tbody>
      <tr>
        <td><%= @fitBitUserInfo["displayName"] %></td>
        <td><%= @fitBitUserInfo["fullName"] %></td>
        <td><%= @fitBitUserInfo["nickName"]%></td>
        <td><%= @fitBitUserInfo["gender"] %></td>
        <td><%= @fitBitUserInfo["height"] %></td>
        <td><%= @fitBitUserInfo["weight"] %></td>
      </tr>
  </tbody>
</table>





<p>


<%= link_to 'Edit', edit_user_path(@user) %> | 
<%= link_to 'View My Challenges', user_challenges_path(@user) %>
</p>

