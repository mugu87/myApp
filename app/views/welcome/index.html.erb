<script type="text/javascript">

function initiatePriorityOptions() {
            $(".char_count1").hide(); 
            $(".char_count2").hide();

            $(".priority-group").each(function() {

                var that = this;

                $(".dropdown-toggle_msgtype").dropdown();

                $(this).find(".set-priority").on("click",function() {

                        if( $(that).hasClass("priority-group-main") ) {
                            $('.char_count1').show();
                            $('#mainContent').keyup();
                        } else if( $(that).hasClass("priority-group-modal") ) {
                            $('.char_count2').show();
                            $('textarea[name=message]').keyup();
                        }

                        // exchange main symbol
                        $(that).find("#priority").attr('class',"glyphicon glyphicon-phone");
                        $(that).find('#priority-text').text("SMS (Text Message)")

                        // apply input logic for priority
                        $(that).find("[name=priority]").val(1);
                        $(that).find("[name=email]").val(0);

                        // set glyphicon glyphicon check for priority button
                        allToNone();
                        $(".dropdown-menu .set-priority").find("span.glyphicon").removeClass("glyphicon glyphicon-unchecked");
                        $(".dropdown-menu .set-priority").find("span.glyphicon").addClass("glyphicon glyphicon-check");
                });

                $(this).find(".set-email").on("click",function() {

                        if( $(that).hasClass("priority-group-main") ) {
                            $('.char_count1').hide();
                            $(".char_count1").popover('hide');
                            $('#messagePost').removeAttr('disabled');
                        } else if( $(that).hasClass("priority-group-modal") ) {
                            $('.char_count2').hide();
                            $(".char_count2").popover('hide');
                            $('#submitThread').removeAttr('disabled');
                        }

                        // exchange main symbol
                        $(that).find("#priority").attr('class',"glyphicon glyphicon-envelope");
                        $(that).find('#priority-text').text("Email")

                        // apply input logic for email
                        $(that).find("[name=email]").val(1);
                        $(that).find("[name=priority]").val(0);

                        // set glyphicon glyphicon check for email button
                        allToNone();
                        $(this).find("span.glyphicon").removeClass("glyphicon glyphicon-unchecked");
                        $(this).find("span.glyphicon").addClass("glyphicon glyphicon-check");
                });

                $(this).find(".set-none").on("click",function() {

                        if( $(that).hasClass("priority-group-main") ) {
                            $('.char_count1').hide();
                            $('.char_count1').popover('hide');
                            $('#messagePost').removeAttr('disabled');
                        } else if( $(that).hasClass("priority-group-modal") ) {
                            $('.char_count2').hide();
                            $('.char_count2').popover('hide');
                            $('#submitThread').removeAttr('disabled');
                        }

                        // exchange main symbol
                        $(that).find("#priority").attr('class',"glyphicon glyphicon-minus-sign");
                        $(that).find('#priority-text').text("Regular Message")

                        // apply input logic for email
                        $(that).find("[name=email]").val(0);
                        $(that).find("[name=priority]").val(0);

                        // set glyphicon glyphicon check for email button
                        allToNone();
                        $(this).find("span.glyphicon").removeClass("glyphicon glyphicon-unchecked");
                        $(this).find("span.glyphicon").addClass("glyphicon glyphicon-check");
                });  

                function allToNone() {
                    // reset all check marks to empty
                    $(".priority-group").find("span.glyphicon").not("#priority").removeClass("glyphicon glyphicon-check");
                    $(".priority-group").find("span.glyphicon").not("#priority").addClass("glyphicon glyphicon-unchecked");
                }

                function turnPriorityOn() {
                    $(".priority-group").find("#priority").removeClass("glyphicon glyphicon-star-empty");
                    $(".priority-group").find("#priority").addClass("glyphicon glyphicon-star");
                }

                function turnPriorityOff() {
                    if( $(".priority-group").find("#priority").hasClass("glyphicon glyphicon-star") ) {
                        $(".priority-group").find("#priority").removeClass("glyphicon glyphicon-star");
                        $(".priority-group").find("#priority").addClass("glyphicon glyphicon-star-empty");

                    }
                }

                // SMS message-ing character count

                $('#mainContent').on('keyup',function() {
                    var char_left, current_char, before_char_limit, after_char_limit;

                    current_char = $(this).val().length;
                    before_char_limit = 112-sender_count;
                    after_char_limit = before_char_limit-21;

                    if( current_char<=before_char_limit ) {
                        char_left = before_char_limit - current_char;
                        $('.char_count1').removeClass("badge-important").addClass("badge-success").text(char_left);
                        $('.char_count1').popover('hide');
                        $('#messagePost').removeAttr('disabled');
                    } else {
                        char_left = before_char_limit - current_char;
                        if( ( $('.char_count1').parent().find('.popover').length == 0 ) && $(".char_count1").css("display") != "none" ) {
                            $('.char_count1').popover("show");
                            $('#messagePost').attr('disabled','disabled');
                        }
                        $('.char_count1').removeClass("badge-success").addClass("badge-important").text(char_left);
                    }

                });

                $('textarea[name=message]').on('keyup',function() {
                    var char_left, current_char, before_char_limit, after_char_limit;

                    current_char = $(this).val().length;
                    before_char_limit = 112-sender_count;
                    after_char_limit = before_char_limit-21;

                    if( current_char<=before_char_limit ) {
                        char_left = before_char_limit - current_char;
                        $('.char_count2').removeClass("badge-important").addClass("badge-success").text(char_left);
                        $('.char_count2').popover('hide');
                        $('#submitThread').removeAttr('disabled');

                    } else {
                        char_left = before_char_limit - current_char;
                        if( ( $('.char_count2').parent().find('.popover').length == 0 ) && $(".char_count2").css("display") != "none" ) {
                            $('.char_count2').popover("show");
                            $('#submitThread').attr('disabled','disabled');
                        }
                        $('.char_count2').removeClass("badge-success").addClass("badge-important").text(char_left);
                    }

                });

            });
        }

initiatePriorityOptions();

</script>

